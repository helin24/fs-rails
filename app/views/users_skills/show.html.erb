<%= render partial: "static_pages/nav", locals: {user: @users_skill.user, users_levels: @users_skill.user.users_levels, users_level: @users_skill.users_level, users_skill: @users_skill, active: "users_skill"} %>

<div id="content">
	<h3>Notes for <%= @users_skill.skill.name %></h3>

	<div id="user-notes-list">
		<h4>My Notes</h4>
		<ul id="user-notes-ul" class="skill-notes-list">
			<% @users_skill.notes.each do |note| %>
			<li class="skill-note">
				<%= render partial: "notes/show", locals: {note: note } %>
			</li>
			<% end %>
		</ul>
	</div>

	<div id="public-notes-list">
		<h4>Other Notes</h4>
		<ul class="skill-notes-list">
			<% @public_notes.each do |note| %>
			<li class="skill-note">
				<%= render partial: "notes/show", locals: {note: note} %>
			</li>
			<% end %>
		</ul>
	</div>

	<div id="add-note-container">
		<%= render partial: "notes/new", locals: {note: @note, notable: @users_skill, user: @users_skill.user } %>
	</div>
</div>